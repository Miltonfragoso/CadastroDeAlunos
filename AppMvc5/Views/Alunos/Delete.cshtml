@model AppMvc5.Models.Aluno

@{
    ViewBag.Title = "Excluir aluno";
}

<h2>Excluir aluno</h2>

<h3>Você tem certeza que deseja excluir este aluno?</h3>
<div>
    <h4>Exclusão do aluno: @Model.Nome</h4>
    <hr />
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataMatricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>

        <tr>
            <td>
                @Html.DisplayFor(model => model.Nome)
            </td>
            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayFor(model => model.DataMatricula)
            </td>
            <td>
                @Html.DisplayFor(model => model.CPF)
            </td>
            <td>
                @Html.DisplayFor(model => model.Ativo)
            </td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Excluir" class="btn btn-danger" />
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    }
</div>
